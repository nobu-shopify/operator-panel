  function formatDate(dateString) {
    if (!dateString) return '-';
    try {
      const date = new Date(dateString);
      return date.getFullYear() + '/' + 
        String(date.getMonth() + 1).padStart(2, '0') + '/' + 
        String(date.getDate()).padStart(2, '0');
    } catch (e) {
      return dateString;
    }
  }
  
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  // Operator's customer ID for importing data
  const operatorCustomerId = 'gid://shopify/Customer/{{ customer.id }}';
  const importProxyUrl = '/apps/operator-panel/proxy/import-customer';
  
  // Event delegation for import buttons
  document.addEventListener('click', function(e) {
    const btn = e.target.closest('.import-btn');
    if (btn && btn.dataset.customer) {
      e.preventDefault();
      console.log('[importCustomer] Button clicked, data-customer:', btn.dataset.customer);
      window.importCustomer(btn.dataset.customer);
    }
  });
  
  // Global function to handle customer import
  window.importCustomer = async function(customerJson) {
    console.log('[importCustomer] Function called with:', customerJson);
    const sourceCustomer = JSON.parse(customerJson);
    console.log('[importCustomer] Parsed customer:', sourceCustomer);
    
    // Confirm before import
    const customerName = [sourceCustomer.firstName, sourceCustomer.lastName].filter(Boolean).join(' ') || '名前未登録';
    if (!confirm('{{ "customer_panel.import_confirm" | t }}\n\n' + customerName + ' のデータをあなたのアカウントに取り込みますか？')) {
      return;
    }
    
    // Find the button that was clicked and show loading state
    const buttons = document.querySelectorAll('.import-btn');
    buttons.forEach(btn => btn.disabled = true);
    
    try {
      console.log('[importCustomer] Sending request to:', importProxyUrl);
      console.log('[importCustomer] Operator ID:', operatorCustomerId);
      console.log('[importCustomer] Source customer:', sourceCustomer);
      
      const response = await fetch(importProxyUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
        },
        body: JSON.stringify({
          operatorCustomerId: operatorCustomerId,
          sourceCustomer: sourceCustomer,
        }),
      });
      
      console.log('[importCustomer] Response status:', response.status);
      console.log('[importCustomer] Response headers:', Object.fromEntries(response.headers.entries()));
      
      // Get response text first for debugging
      const responseText = await response.text();
      console.log('[importCustomer] Response text:', responseText);
      
      // Try to parse as JSON
      let data;
      try {
        data = JSON.parse(responseText);
      } catch (parseError) {
        console.error('[importCustomer] JSON parse error:', parseError);
        console.error('[importCustomer] Raw response:', responseText);
        alert('{{ "customer_panel.import_error" | t }}\n\nサーバーからの応答を解析できませんでした。');
        return;
      }
      
      if (!data.success) {
        alert('{{ "customer_panel.import_error" | t }}\n\n' + (data.error || ''));
        return;
      }
      
      // Dispatch custom event for other scripts to listen to
      const event = new CustomEvent('customerImported', { 
        detail: { source: sourceCustomer, updated: data.customer },
        bubbles: true 
      });
      document.dispatchEvent(event);
      
      // Show success message
      alert('{{ "customer_panel.import_success" | t }}\n\n' + 
        '取り込み元: ' + customerName + '\n' +
        'カードID: ' + (sourceCustomer.metafields?.cardId || '-') + '\n' +
        '顧客ID: ' + (sourceCustomer.metafields?.customerId || '-') + '\n' +
        'ポイント: ' + (sourceCustomer.metafields?.points || 0) + '\n' +
        '性別: ' + (sourceCustomer.metafields?.gender || '-') + '\n' +
        '生年月日: ' + (sourceCustomer.metafields?.birthday || '-'));
      
      // Reload page to show updated operator info
      window.location.reload();
      
    } catch (error) {
      console.error('Import error:', error);
      alert('{{ "customer_panel.import_error" | t }}\n\n' + error.message);
    } finally {
      buttons.forEach(btn => btn.disabled = false);
    }
  };
})();
